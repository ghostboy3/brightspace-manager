{
  "name": "Honk Helper",
  "description": "procrastination pet!!!",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "declarativeNetRequest"
  ],
  "version": "1.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "gooseIcon16.png",
      "32": "gooseIcon32.png",
      "48": "gooseIcon64.png",
      "128": "gooseIcon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "gooseIcon16.png",
    "32": "gooseIcon32.png",
    "48": "gooseIcon64.png",
    "128": "gooseIcon128.png"
  }
}
